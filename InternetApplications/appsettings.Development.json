{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AOP.Performance": "Information"
    }
  },
  "PerformanceInterceptor": {
    "Enabled": true,
    "LogMethodEntry": true,
    "LogAllMethods": true,
    "InfoThresholdMs": 50,
    "WarningThresholdMs": 500,
    "ErrorThresholdMs": 2000
  }
}
